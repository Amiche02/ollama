# -------------------------------------------------------------------
# 1) Builder Stage
#    - Install Python & build tools, then pipâ€‘install all dependencies
# -------------------------------------------------------------------
    FROM nvidia/cuda:12.2.2-runtime-ubuntu22.04 AS builder

    # Install Python and build tools
    RUN apt-get update && apt-get install -y --no-install-recommends \
        python3.11 python3-pip build-essential \
        && rm -rf /var/lib/apt/lists/*

    WORKDIR /app

    # Copy your dependencies file(s)
    COPY requirements/requirements.txt ./requirements.txt

    # Upgrade pip and install dependencies
    RUN python3.11 -m pip install --upgrade pip
    RUN pip install --no-cache-dir -r requirements.txt

    # -------------------------------------------------------------------
    # 2) Final Stage
    # -------------------------------------------------------------------
    FROM nvidia/cuda:12.2.2-runtime-ubuntu22.04

    # (Optional) create non-root user for security
    RUN useradd --create-home appuser
    USER appuser
    WORKDIR /app

    # Install Python in final image
    USER root
    RUN apt-get update && apt-get install -y --no-install-recommends \
        python3.11 python3-pip \
        && rm -rf /var/lib/apt/lists/*
    USER appuser

    # Copy site-packages from builder stage
    COPY --from=builder /usr/local /usr/local

    # Copy the backend application code (note: our main file is now at /app/main.py)
    COPY backend/ /app/

    # Expose FastAPI port
    EXPOSE 8000

    # Set necessary environment variables
    ENV OLLAMA_URL=http://ollama:11434

    # Start the app via uvicorn
    CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
